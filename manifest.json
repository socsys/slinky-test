{
  "name": "Surrey Uni Browser Plugin",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Displays page load time in the toolbar",
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["browser-polyfill.min.js", "performance.js"]
  }],
  "permissions": [
    "activeTab",
    "storage",
    "geolocation"
  ],
  "icons": {
    "16": "icon.png"
  }
}
